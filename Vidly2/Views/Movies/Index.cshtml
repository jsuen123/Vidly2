@model IEnumerable<Vidly2.Models.Movie>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Save New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Genre</th>
        <th></th>
    </tr>

@foreach (var movie in Model) {
    <tr>
        <td>
            @Html.ActionLink(movie.Name, "Details", new { id = movie.Id })
        </td>
        <td>
            @movie.Genre.Name
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=movie.Id }) |
            @Html.ActionLink("Details", "Details", new { id=movie.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=movie.Id })
        </td>
    </tr>
}

</table>
