@model Vidly2.Models.Movie

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @if (@Model.Genre != null)
    {
        <li>Genre: @Model.Genre.Name</li>
    }
    @if (@Model.ReleaseDate != null)
    {
        <li>Release Date: @Model.ReleaseDate.Value.ToString("dd/MM/yyyy")</li>
    }
    @if (@Model.DateAdded != null)
    {
        <li>Date Added: @Model.DateAdded.Value.ToString("dd/MM/yyyy")</li>
    }
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
